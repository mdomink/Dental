@using DentalWeb.ViewModels
@model PatientViewModel

<div class="form-signin justify-content-center mx-auto" style="width: 300px;">
    <div class="justify-content-center mx-auto">
        <form method="post" asp-action="Create">
            @if (TempData["Error"] != null)
            {
                <div class="col-md-12 alert alert-danger">
                    <span>@TempData["Error"]</span>
                </div>
            }
            <div class="form-group">
                <label asp-for="Name1">Name</label>
                <input asp-for="Name1" class="form-control" placeholder="Name" />
            </div>
            <div class="form-group">
                <label asp-for="Name2">Surname</label>
                <input asp-for="Name2" class="form-control" placeholder="Surname" />
            </div>
            @if (User.IsInRole("Admin"))
            {
                <div class="form-group">
                    <label asp-for="OutUserId">User ID</label>
                    <input asp-for="OutUserId" class="form-control" placeholder="User ID" />
                </div>                
            }
            <div class="form-group py-2">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>    
        </form>
    </div>
</div>