@using Dental.ViewModels
@model DentalScanViewModel

<section class="py-5 text-center container">
    <div class="card shadow-sm">
        <div class="text-body">
            <div class="col">
                <a asp-action="Index" asp-route-id="@Model.PatientId" style="text-decoration:none">PATIENT-@Model.PatientId</a>
            </div>            
        </div>        
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
                <p>Valid till: @Model.ValidTo?.ToString("dd.MM.yyyy")</p>
            </div>
            <div class="d-flex justify-content-between align-items-center">
                <p class="text-body-secondary">Creation date: @Model.CreationDate?.ToString("dd.MM.yyyy")</p>
            </div>
        </div>
    </div>
</section>