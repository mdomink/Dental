@using DentalWeb.ViewModels
@model LoginViewModel

@{
	ViewData["Title"] = "Login";
}

<div class="form-signin justify-content-center mx-auto">
    <div class="justify-content-center mx-auto" style="width: 300px;">
        <form asp-action="Login">
            <h4 class="h3 mb-3 fw-normal">Sign in to your account</h4>
            @if (TempData["Error"] != null)
            {
                <div class="col-md-12 alert alert-danger">
                    <span><b>Sorry!</b> - @TempData["Error"]</span>
                </div>
            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmailAddress" class="control-label"></label>
                <input asp-for="EmailAddress" class="form-control">
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group py-2">
                <input class="btn btn-primary" type="submit" value="Sign in"/>
            </div>
            <div class="form-group">
                <p class="text-decoration-none">
                    Create you account <a class="text-reset" asp-area="" asp-controller="Account" asp-action="Register">here</a>.
                </p>
            </div>        
        </form>       
    </div>    
</div>

<div>
    <img src="https://www.alondradental.com/wp-content/uploads/2022/10/itero-dental-scanner-1024x733-1.jpg" class="img-fluid" alt="Responsive image">
</div>